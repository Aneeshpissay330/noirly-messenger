# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:android)

platform :android do
  lane :clean do
    gradle(
      task: 'clean'
    )
  end

  lane :internal do
    gradle(
      task: 'bundle',
      build_type: 'Release'
    )
  end

  lane :verify_before_clean do
    # Verify the build artifacts exist
    UI.message("Verifying build artifacts before cleaning...")
    
    # Check if AAB file exists
    aab_path = 'app/build/outputs/bundle/release/app-release.aab'
    if File.exist?(aab_path)
      UI.success("‚úÖ AAB file found at: #{aab_path}")
      file_size = File.size(aab_path)
      UI.message("üìÅ File size: #{(file_size / 1024.0 / 1024.0).round(2)} MB")
    else
      UI.error("‚ùå AAB file not found at: #{aab_path}")
      UI.user_error!("Build verification failed: AAB file missing")
    end
    
    # Check if APK file exists (optional)
    apk_path = 'app/build/outputs/apk/release/app-release.apk'
    if File.exist?(apk_path)
      UI.success("‚úÖ APK file found at: #{apk_path}")
    else
      UI.message("‚ÑπÔ∏è APK file not found (this is normal for bundle builds)")
    end
    
    # Verify keystore configuration
    if File.exist?('keystore.properties')
      UI.success("‚úÖ Keystore configuration found")
    else
      UI.error("‚ùå Keystore configuration missing")
      UI.user_error!("Build verification failed: keystore.properties missing")
    end
    
    # Verify google-services.json
    if File.exist?('app/google-services.json')
      UI.success("‚úÖ Google Services configuration found")
    else
      UI.error("‚ùå Google Services configuration missing")
      UI.user_error!("Build verification failed: google-services.json missing")
    end
    
    UI.success("üéâ All verification checks passed! Ready to clean.")
  end
end
